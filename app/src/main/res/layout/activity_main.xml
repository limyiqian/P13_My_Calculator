<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableRow
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dip">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="0" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total" />
    </TableRow>

    <TableRow
        android:id="@+id/row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnAC"
            android:onClick="btnOnClick"
            android:layout_span="3"
            android:text="AC" />
        <Button
            android:id="@+id/btnDivide"
            android:onClick="btnOnClick"
            android:text="/" />
    </TableRow>
    <TableRow
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn7"
            android:onClick="btnOnClick"
            android:text="7" />
        <Button
            android:id="@+id/btn8"
            android:onClick="btnOnClick"
            android:text="8" />
        <Button
            android:id="@+id/btn9"
            android:onClick="btnOnClick"
            android:text="9" />
        <Button
            android:id="@+id/btnMultiply"
            android:onClick="btnOnClick"
            android:text="*" />
    </TableRow>

    <TableRow
        android:id="@+id/row4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn4"
            android:onClick="btnOnClick"
            android:text="4" />
        <Button
            android:id="@+id/btn5"
            android:onClick="btnOnClick"
            android:text="5" />
        <Button
            android:id="@+id/btn6"
            android:onClick="btnOnClick"
            android:text="6" />
        <Button
            android:id="@+id/btnMinus"
            android:onClick="btnOnClick"
            android:text="-" />
    </TableRow>

    <TableRow
        android:id="@+id/row5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn1"
        android:onClick="btnOnClick"
        android:text="1" />
    <Button
        android:id="@+id/btn2"
        android:onClick="btnOnClick"
        android:text="2" />
    <Button
        android:id="@+id/btn3"
        android:onClick="btnOnClick"
        android:text="3" />
    <Button
        android:id="@+id/btnAdd"
        android:onClick="btnOnClick"
        android:text="+" />
    </TableRow>
    <TableRow
        android:id="@+id/row6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn0"
        android:layout_span="2"
        android:onClick="btnOnClick"
        android:text="0" />
    <Button
        android:id="@+id/btnDecimal"
        android:onClick="btnOnClick"
        android:text="." />
    <Button
        android:id="@+id/btnEqual"
        android:onClick="btnOnClick"
        android:text="=" />
    </TableRow>
</TableLayout>
